    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <style>
        /* REFINED BRAND SYSTEM */
        :root {
            /* CORE BRAND - Black/White/Gold/Yellow Lightning */
            --brand-black: #000000;
            --brand-white: #ffffff;
            --brand-gold: #D4AF37;
            --brand-yellow: #FFD700;
            --lightning-yellow: #FFEF00;
            
            /* Accent Colors: Pink/Cyan for backgrounds, buttons, transitions */
            --accent-pink: #FF4EB1;
            --accent-cyan: #00CFC8;
            --accent-peach: #FFD1A0;
            --accent-teal: #004E64;
            --accent-navy: #1A103D;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--brand-black);
            color: var(--brand-white);
            overflow: hidden;
            height: 100vh;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        /* PRE-LOAD WATCH FACE ANIMATION */
        .preload-screen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--brand-black);
            z-index: 1000;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 1;
            transition: opacity 1s ease-out;
        }

        .preload-screen.fade-out {
            opacity: 0;
            pointer-events: none;
        }

        .preload-watch {
            width: 300px;
            height: 300px;
            opacity: 0;
            transform: scale(0.1);
            animation: watch-preload-sequence 4s ease-out forwards;
        }

        .watch-face {
            fill: none;
            stroke: var(--brand-gold);
            stroke-width: 3;
            filter: drop-shadow(0 0 30px var(--brand-gold));
        }

        .watch-markers {
            fill: var(--brand-white);
            opacity: 0;
            animation: markers-appear 2s ease-out 1s forwards;
        }

        .watch-hands {
            stroke: var(--lightning-yellow);
            stroke-width: 4;
            stroke-linecap: round;
            opacity: 0;
            animation: hands-appear 1s ease-out 2s forwards;
        }

        .watch-center {
            fill: var(--accent-pink);
            opacity: 0;
            animation: center-glow 1s ease-out 2.5s forwards;
        }

        @keyframes watch-preload-sequence {
            0% {
                opacity: 0;
                transform: scale(0.1) rotate(-180deg);
            }
            40% {
                opacity: 1;
                transform: scale(1.8) rotate(-90deg);
            }
            70% {
                opacity: 1;
                transform: scale(1.4) rotate(-30deg);
            }
            100% {
                opacity: 1;
                transform: scale(1) rotate(0deg);
            }
        }

        @keyframes markers-appear {
            0% {
                opacity: 0;
                transform: scale(0.5);
            }
            100% {
                opacity: 1;
                transform: scale(1);
            }
        }

        @keyframes hands-appear {
            0% {
                opacity: 0;
                transform: rotate(-90deg);
            }
            100% {
                opacity: 1;
                transform: rotate(0deg);
            }
        }

        @keyframes center-glow {
            0% {
                opacity: 0;
                transform: scale(0);
            }
            100% {
                opacity: 1;
                transform: scale(1);
            }
        }

        /* WATCH BLUEPRINT BACKGROUND */
        .watch-blueprint {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -2;
            opacity: 0.1;
            pointer-events: none;
        }

        .watch-blueprint svg {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* MAIN APP CONTAINER */
        .app-container {
            opacity: 0;
            transform: scale(0.8);
            transition: all 1s ease-out;
        }

        .app-container.loaded {
            opacity: 1;
            transform: scale(1);
        }

        /* FLUID ANIMATED BACKGROUND */
        .fluid-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: linear-gradient(45deg, 
                var(--accent-navy), 
                var(--accent-pink), 
                var(--accent-cyan), 
                var(--brand-gold));
            background-size: 400% 400%;
            animation: fluid-gradient 15s ease infinite;
        }

        @keyframes fluid-gradient {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* FLOATING PARTICLES */
        .particles-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            pointer-events: none;
        }

        .particle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: var(--brand-gold);
            border-radius: 50%;
            opacity: 0.6;
            animation: float-particle 20s linear infinite;
        }

        .particle:nth-child(odd) {
            background: var(--accent-pink);
            animation-duration: 25s;
        }

        .particle:nth-child(3n) {
            background: var(--accent-cyan);
            animation-duration: 18s;
        }

        @keyframes float-particle {
            0% {
                transform: translateY(100vh) translateX(0) rotate(0deg);
                opacity: 0;
            }
            10% { opacity: 0.6; }
            90% { opacity: 0.6; }
            100% {
                transform: translateY(-10vh) translateX(100px) rotate(360deg);
                opacity: 0;
            }
        }

        /* PAGE SYSTEM */
        .page-container {
            position: relative;
            width: 100%;
            height: 100vh;
        }

        .page {
            position: absolute;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 0.5rem 2rem 2rem 2rem;
            opacity: 1;
            transform: translateX(0);
            transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            z-index: 1;
        }

        .page.hidden {
            opacity: 0;
            transform: translateX(100%);
            pointer-events: none;
            z-index: 0;
        }

        .page.active {
            z-index: 2;
        }

        /* LANDING PAGE */
        .landing-page {
            background: radial-gradient(circle at center, 
                rgba(26, 16, 61, 0.9), 
                rgba(0, 0, 0, 0.8));
            text-align: center;
        }

        .brand-container {
            opacity: 0;
            animation: brand-reveal 2s ease-out 1s forwards;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        @keyframes brand-reveal {
            0% {
                opacity: 0;
                transform: translateY(30px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .heritage-text {
            font-family: 'Playfair Display', serif;
            font-size: clamp(2.5rem, 8vw, 4rem);
            font-weight: 700;
            color: var(--brand-white);
            margin-bottom: 1rem;
            letter-spacing: 2px;
        }

        .lightning-bolt {
            font-size: clamp(6rem, 15vw, 12rem);
            margin: 1rem 0;
            animation: brand-lightning-glow 3s ease-in-out infinite alternate;
            display: inline-block;
        }

        @keyframes brand-lightning-glow {
            0% {
                filter: drop-shadow(0 0 30px var(--lightning-yellow)) 
                        drop-shadow(0 0 60px var(--brand-gold));
                transform: scale(1);
            }
            100% {
                filter: drop-shadow(0 0 50px var(--lightning-yellow)) 
                        drop-shadow(0 0 80px var(--brand-gold)) 
                        drop-shadow(0 0 100px var(--accent-cyan));
                transform: scale(1.05);
            }
        }

        .dubai-text {
            font-size: clamp(2.5rem, 8vw, 4rem);
            font-weight: 700;
            color: var(--brand-gold);
            margin-bottom: 3rem;
            letter-spacing: 3px;
            text-transform: uppercase;
        }

        .tagline {
            font-size: clamp(0.9rem, 2.5vw, 1.2rem);
            opacity: 0.8;
            margin-bottom: 4rem;
            max-width: 600px;
            line-height: 1.6;
            color: var(--brand-white);
        }

        /* BUTTONS */
        .cta-button {
            background: linear-gradient(45deg, var(--accent-cyan), var(--accent-pink));
            border: none;
            padding: clamp(1rem, 3vw, 1.5rem) clamp(2rem, 5vw, 3rem);
            border-radius: 8px;
            color: var(--brand-white);
            font-weight: 700;
            font-size: clamp(1rem, 2.5vw, 1.2rem);
            cursor: pointer;
            transition: all 0.4s ease;
            letter-spacing: 1px;
            user-select: none;
            position: relative;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 207, 200, 0.3);
        }

        .cta-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s ease;
        }

        .cta-button:hover {
            transform: translateY(-2px);
            background: linear-gradient(45deg, var(--accent-pink), #ff6bd6);
            box-shadow: 0 0 30px var(--accent-pink), 0 0 60px rgba(255, 78, 177, 0.5);
            color: var(--brand-white);
        }

        .cta-button:hover::before {
            left: 100%;
        }

        /* PHOTO STUDIO PAGE */
        .photo-studio-page {
            background: radial-gradient(circle at center, 
                rgba(0, 207, 200, 0.2), 
                rgba(0, 0, 0, 0.9));
        }

        .camera-interface {
            width: 100%;
            max-width: 400px;
            height: 300px;
            background: var(--accent-navy);
            border: 2px solid var(--accent-cyan);
            border-radius: 12px;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 2rem;
            overflow: hidden;
        }

        .watch-outline {
            width: 120px;
            height: 120px;
            border: 2px solid var(--accent-cyan);
            border-radius: 50%;
            position: relative;
            opacity: 0.6;
            animation: pulse 2s ease-in-out infinite;
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); opacity: 0.6; }
            50% { transform: scale(1.05); opacity: 0.8; }
        }

        .watch-outline::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 60px;
            height: 60px;
            border: 1px solid var(--brand-gold);
            border-radius: 50%;
        }

        .watch-outline::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 2px;
            height: 20px;
            background: var(--brand-gold);
            transform-origin: bottom center;
            animation: watch-hand 4s linear infinite;
        }

        @keyframes watch-hand {
            0% { transform: translate(-50%, -100%) rotate(0deg); }
            100% { transform: translate(-50%, -100%) rotate(360deg); }
        }

        .scan-line {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, transparent, var(--accent-pink), transparent);
            opacity: 0.8;
            animation: scan-sweep 2s ease-in-out infinite;
            box-shadow: 0 0 20px var(--accent-pink);
        }

        @keyframes scan-sweep {
            0% { transform: translateY(0); }
            50% { transform: translateY(297px); }
            100% { transform: translateY(0); }
        }

        /* JOIN PAGE */
        .join-page {
            background: radial-gradient(circle at center, 
                rgba(255, 78, 177, 0.2), 
                rgba(0, 0, 0, 0.9));
        }

        .form-container {
            background: rgba(26, 16, 61, 0.8);
            border: 1px solid var(--accent-pink);
            border-radius: 12px;
            padding: 2rem;
            max-width: 400px;
            width: 100%;
            backdrop-filter: blur(10px);
        }

        .form-field {
            margin-bottom: 1.5rem;
        }

        .form-field label {
            display: block;
            margin-bottom: 0.5rem;
            color: var(--accent-peach);
            font-weight: 600;
        }

        .form-field input {
            width: 100%;
            padding: 1rem;
            border: 1px solid var(--accent-teal);
            border-radius: 8px;
            background: rgba(0, 0, 0, 0.5);
            color: var(--brand-white);
            font-size: 1rem;
        }

        .form-field input:focus {
            outline: none;
            border-color: var(--accent-pink);
            box-shadow: 0 0 10px rgba(255, 78, 177, 0.3);
        }

        /* VIP PAGE */
        .vip-page {
            background: radial-gradient(circle at center, 
                rgba(212, 175, 55, 0.2), 
                rgba(0, 0, 0, 0.9));
        }

        .vip-badge {
            margin-bottom: 2rem;
            animation: vip-glow 2s ease-in-out infinite alternate;
            display: inline-block;
        }

        .vip-watch {
            width: clamp(120px, 20vw, 180px);
            height: clamp(120px, 20vw, 180px);
        }

        .vip-watch-face {
            fill: none;
            stroke: var(--brand-gold);
            stroke-width: 2;
        }

        .vip-watch-markers {
            fill: var(--brand-white);
        }

        .vip-watch-hands {
            stroke: var(--lightning-yellow);
            stroke-width: 3;
            stroke-linecap: round;
        }

        .vip-watch-center {
            fill: var(--accent-pink);
        }

        .vip-crown {
            fill: var(--brand-gold);
            stroke: var(--brand-yellow);
            stroke-width: 1;
        }

        @keyframes vip-glow {
            0% {
                filter: drop-shadow(0 0 20px var(--brand-gold));
                transform: scale(1);
            }
            100% {
                filter: drop-shadow(0 0 40px var(--brand-gold)) 
                        drop-shadow(0 0 60px var(--accent-pink));
                transform: scale(1.05);
            }
        }

        .page-title {
            font-size: clamp(2rem, 6vw, 3rem);
            font-weight: 700;
            margin-bottom: 1rem;
            text-align: center;
            color: var(--brand-white);
        }

        .page-subtitle {
            font-size: clamp(1rem, 3vw, 1.2rem);
            opacity: 0.8;
            margin-bottom: 2rem;
            text-align: center;
            max-width: 600px;
            color: var(--brand-white);
        }

        /* TRANSITIONS */
        .lightning-transition {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 70;
            opacity: 0;
            font-size: 8rem;
        }

        .lightning-transition.active {
            animation: lightning-flash 0.6s ease-out;
        }

        @keyframes lightning-flash {
            0% {
                opacity: 0;
                transform: translate(-50%, -50%) scale(0.1);
            }
            50% {
                opacity: 1;
                transform: translate(-50%, -50%) scale(2);
            }
            100% {
                opacity: 0;
                transform: translate(-50%, -50%) scale(1);
            }
        }

        .transition-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--brand-white);
            z-index: 50;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.2s ease;
        }

        .transition-overlay.active {
            opacity: 0.8;
        }

        /* RESPONSIVE */
        @media (max-width: 768px) {
            .page {
                padding: 0.25rem 1rem 1rem 1rem;
                justify-content: flex-start;
                align-items: center;
                padding-top: 1rem;
            }
            
            .form-container {
                padding: 1.5rem;
                margin-bottom: 1rem;
            }
            
            .camera-interface {
                height: 250px;
                margin-bottom: 1.5rem;
            }
            
            .heritage-text, .dubai-text {
                margin-bottom: 0.5rem;
            }
            
            .preload-watch {
                width: 250px;
                height: 250px;
            }
        }

        @media (max-width: 480px) {
            .page {
                justify-content: flex-start;
                align-items: center;
                padding-top: 0.5rem;
                padding-bottom: 2rem;
            }
            
            /* Keep landing page centered since it works fine */
            .landing-page {
                justify-content: center;
                align-items: center;
            }
            
            .tagline {
                margin-bottom: 2rem;
            }
            
            .camera-interface {
                height: 200px;
                margin-bottom: 1rem;
            }
            
            .form-container {
                padding: 1rem;
                margin-bottom: 1rem;
            }
            
            .vip-badge {
                margin-bottom: 1rem;
            }
            
            .page-subtitle {
                margin-bottom: 1rem;
            }
            
            .preload-watch {
                width: 200px;
                height: 200px;
            }
        }
    </style>
</head>
<body>
    <!-- WATCH BLUEPRINT BACKGROUND -->
    <div class="watch-blueprint">
        <svg viewBox="0 0 1200 800" xmlns="http://www.w3.org/2000/svg">
            <!-- Main watch circle -->
            <circle cx="600" cy="400" r="200" fill="none" stroke="var(--brand-gold)" stroke-width="0.5" opacity="0.3"/>
            <circle cx="600" cy="400" r="180" fill="none" stroke="var(--accent-cyan)" stroke-width="0.3" opacity="0.2"/>
            <circle cx="600" cy="400" r="160" fill="none" stroke="var(--brand-gold)" stroke-width="0.3" opacity="0.2"/>
            
            <!-- Hour markers -->
            <g stroke="var(--brand-gold)" stroke-width="0.5" opacity="0.4">
                <line x1="600" y1="220" x2="600" y2="240"/>
                <line x1="680" y1="400" x2="660" y2="400"/>
                <line x1="600" y1="580" x2="600" y2="560"/>
                <line x1="520" y1="400" x2="540" y2="400"/>
            </g>
            
            <!-- Blueprint grid -->
            <defs>
                <pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse">
                    <path d="M 20 0 L 0 0 0 20" fill="none" stroke="var(--accent-cyan)" stroke-width="0.1" opacity="0.1"/>
                </pattern>
            </defs>
            <rect width="100%" height="100%" fill="url(#grid)"/>
            
            <!-- Additional timepiece elements -->
            <circle cx="200" cy="150" r="50" fill="none" stroke="var(--accent-pink)" stroke-width="0.3" opacity="0.2"/>
            <circle cx="1000" cy="650" r="80" fill="none" stroke="var(--brand-gold)" stroke-width="0.3" opacity="0.2"/>
            <circle cx="150" cy="600" r="30" fill="none" stroke="var(--accent-cyan)" stroke-width="0.3" opacity="0.2"/>
        </svg>
    </div>

    <!-- PRE-LOAD SCREEN -->
    <div class="preload-screen" id="preloadScreen">
        <svg class="preload-watch" viewBox="0 0 300 300" xmlns="http://www.w3.org/2000/svg">
            <!-- Watch Face Outer Ring -->
            <circle cx="150" cy="150" r="140" class="watch-face"/>
            <circle cx="150" cy="150" r="130" class="watch-face"/>
            
            <!-- Hour Markers -->
            <g class="watch-markers">
                <rect x="148" y="20" width="4" height="20" rx="2"/>
                <rect x="275" y="148" width="20" height="4" rx="2"/>
                <rect x="148" y="260" width="4" height="20" rx="2"/>
                <rect x="5" y="148" width="20" height="4" rx="2"/>
                
                <!-- Minute markers -->
                <rect x="149" y="35" width="2" height="10" rx="1"/>
                <rect x="149" y="45" width="2" height="8" rx="1"/>
                <rect x="149" y="55" width="2" height="6" rx="1"/>
                
                <rect x="260" y="149" width="10" height="2" rx="1"/>
                <rect x="250" y="149" width="8" height="2" rx="1"/>
                <rect x="240" y="149" width="6" height="2" rx="1"/>
                
                <rect x="149" y="255" width="2" height="10" rx="1"/>
                <rect x="149" y="245" width="2" height="8" rx="1"/>
                <rect x="149" y="235" width="2" height="6" rx="1"/>
                
                <rect x="30" y="149" width="10" height="2" rx="1"/>
                <rect x="40" y="149" width="8" height="2" rx="1"/>
                <rect x="50" y="149" width="6" height="2" rx="1"/>
            </g>
            
            <!-- Watch Hands -->
            <g class="watch-hands">
                <!-- Hour Hand -->
                <line x1="150" y1="150" x2="150" y2="100" stroke-width="6"/>
                <!-- Minute Hand -->
                <line x1="150" y1="150" x2="150" y2="70" stroke-width="4"/>
                <!-- Second Hand -->
                <line x1="150" y1="150" x2="190" y2="80" stroke="var(--accent-pink)" stroke-width="2"/>
            </g>
            
            <!-- Center Dot -->
            <circle cx="150" cy="150" r="8" class="watch-center"/>
        </svg>
    </div>

    <!-- MAIN APP -->
    <div class="app-container" id="appContainer">
        <!-- Fluid Background -->
        <div class="fluid-background"></div>
        
        <!-- Floating Particles -->
        <div class="particles-container" id="particles"></div>

        <!-- Page Container -->
        <div class="page-container">
            <!-- 1. LANDING PAGE -->
            <div class="page landing-page active" id="landing">
                <div class="brand-container">
                    <div class="heritage-text">Heritage Club</div>
                    <div class="lightning-bolt">‚ö°Ô∏è</div>

        <!-- Transition Elements -->
        <div class="transition-overlay" id="transitionOverlay"></div>
        <div class="lightning-transition" id="lightningTransition">‚ö°Ô∏è</div>
    </div>

    <script>
        let currentPageIndex = 0;
        let isTransitioning = false;
        const pages = ['landing', 'photo-studio', 'join', 'vip'];

        // Initialize pre-load sequence
        function initializeApp() {
            // Start pre-load sequence
            setTimeout(() => {
                document.getElementById('preloadScreen').classList.add('fade-out');
                document.getElementById('appContainer').classList.add('loaded');
                createParticles();
            }, 4500); // After preload animation completes
        }

        // Create particles
        function createParticles() {
            const container = document.getElementById('particles');
            const particleCount = window.innerWidth < 768 ? 15 : 30;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 20 + 's';
                particle.style.animationDuration = (15 + Math.random() * 10) + 's';
                container.appendChild(particle);
            }
        }

        // Lightning transition
        function lightningTransition(callback) {
            if (isTransitioning) return;
            
            isTransitioning = true;
            
            const lightning = document.getElementById('lightningTransition');
            const overlay = document.getElementById('transitionOverlay');
            
            // Flash lightning
            lightning.classList.add('active');
            
            setTimeout(() => {
                overlay.classList.add('active');
            }, 200);
            
            setTimeout(() => {
                callback();
                lightning.classList.remove('active');
            }, 400);
            
            setTimeout(() => {
                overlay.classList.remove('active');
                isTransitioning = false;
            }, 600);
        }

        // Switch page
        function switchToPage(targetIndex) {
            // Hide all pages
            pages.forEach(pageId => {
                const page = document.getElementById(pageId);
                page.classList.remove('active');
                page.classList.add('hidden');
            });
            
            // Show target page
            setTimeout(() => {
                const targetPage = document.getElementById(pages[targetIndex]);
                targetPage.classList.remove('hidden');
                targetPage.classList.add('active');
                currentPageIndex = targetIndex;
            }, 50);
        }

        // Next page with transition
        function nextPage() {
            if (currentPageIndex < pages.length - 1) {
                lightningTransition(() => {
                    switchToPage(currentPageIndex + 1);
                });
            }
        }

        // Restart demo
        function restartDemo() {
            lightningTransition(() => {
                switchToPage(0);
            });
        }

        // Start the app
        initializeApp();
    </script>
